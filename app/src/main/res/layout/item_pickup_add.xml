<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingBottom="@dimen/narrow"
	android:paddingEnd="@dimen/narrow"
	android:paddingStart="@dimen/standard"
	android:paddingTop="@dimen/standard"
	tools:ignore="MissingPrefix">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/standard"
			android:background="@drawable/draw_circle_green"
			android:padding="@dimen/thin">

			<ImageView
				android:id="@+id/iv_icon"
				android:layout_width="@dimen/medium"
				android:layout_height="@dimen/medium"
				android:contentDescription="@null"/>
		</LinearLayout>

		<TextView
			android:id="@+id/tv_title"
			fontPath="fonts/lato-bold.ttf"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/thin"
			android:ellipsize="end"
			android:ems="6"
			android:textColor="@color/grey_545454"
			tools:text="Aluminium"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/standard"
			android:background="@drawable/draw_underline"
			android:orientation="horizontal">

			<android.support.v7.widget.AppCompatEditText
				android:id="@+id/et_quantity"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@color/transparent"
				android:inputType="numberDecimal"
				android:padding="@dimen/thick"
				android:textColor="@color/grey_282828"
				android:textSize="@dimen/text_medium"/>

			<TextView
				android:id="@+id/tv_unit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/thick"
				android:textColor="@color/grey_545454"
				tools:text="kg"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/standard"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_speed_0"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/draw_border_green"
			android:gravity="center"
			android:paddingBottom="@dimen/thin"
			android:paddingTop="@dimen/thin"
			android:tag="1"
			android:textColor="@color/colorPrimary"/>

		<TextView
			android:id="@+id/tv_speed_1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/standard"
			android:layout_weight="1"
			android:background="@drawable/draw_border_green"
			android:gravity="center"
			android:paddingBottom="@dimen/thin"
			android:paddingTop="@dimen/thin"
			android:tag="2"
			android:textColor="@color/colorPrimary"/>

		<TextView
			android:id="@+id/tv_speed_2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/standard"
			android:layout_weight="1"
			android:background="@drawable/draw_border_green"
			android:gravity="center"
			android:paddingBottom="@dimen/thin"
			android:paddingTop="@dimen/thin"
			android:tag="3"
			android:textColor="@color/colorPrimary"/>

		<TextView
			android:id="@+id/tv_speed_3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/standard"
			android:layout_weight="1"
			android:background="@drawable/draw_border_green"
			android:gravity="center"
			android:paddingBottom="@dimen/thin"
			android:paddingTop="@dimen/thin"
			android:tag="4"
			android:textColor="@color/colorPrimary"/>

		<TextView
			android:id="@+id/tv_speed_4"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/standard"
			android:layout_weight="1"
			android:background="@drawable/draw_border_green"
			android:gravity="center"
			android:paddingBottom="@dimen/thin"
			android:paddingTop="@dimen/thin"
			android:tag="5"
			android:textColor="@color/colorPrimary"/>
	</LinearLayout>
</LinearLayout>