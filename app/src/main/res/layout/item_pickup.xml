<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/standard"
	android:layout_marginTop="@dimen/standard"
	android:orientation="vertical"
	tools:ignore="MissingPrefix">

	<LinearLayout
		android:id="@+id/ll_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/standard"
		android:background="@drawable/draw_circle_green"
		android:padding="@dimen/thin">

		<ImageView
			android:id="@+id/iv_icon"
			android:layout_width="@dimen/medium"
			android:layout_height="@dimen/medium"
			android:contentDescription="@null"/>
	</LinearLayout>


	<TextView
		android:id="@+id/tv_title"
		fontPath="fonts/lato-bold.ttf"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/thin"
		android:layout_toEndOf="@id/ll_icon"
		android:layout_toStartOf="@+id/tv_price"
		android:textColor="@color/grey_545454"
		tools:text="Aluminium"/>

	<TextView
		android:id="@+id/tv_weight"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_title"
		android:layout_toEndOf="@id/ll_icon"
		android:layout_toStartOf="@+id/tv_price"
		android:textColor="@color/grey_848484"
		android:textSize="@dimen/text_small"
		tools:text="056 kg"/>

	<TextView
		android:id="@+id/tv_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:padding="@dimen/standard"
		android:textColor="@color/grey_545454"
		tools:text="\u20B9 800"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_below="@id/tv_weight"
		android:layout_marginTop="@dimen/standard"
		android:layout_toEndOf="@id/ll_icon"
		android:background="@color/grey_eeeeee"/>
</RelativeLayout>