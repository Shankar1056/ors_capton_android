<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:gravity="center"
	android:orientation="vertical"
	tools:ignore="MissingPrefix">

	<com.bigappcompany.ors_captain.view.ViewPagerCustomDuration
		android:id="@+id/vp_slider"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<android.support.design.widget.TabLayout
		android:id="@+id/tab_layout"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/medium"
		android:layout_marginTop="@dimen/medium"
		android:padding="0dp"
		app:tabBackground="@drawable/selector_dot"
		app:tabGravity="center"
		app:tabIndicatorHeight="0dp"
		app:tabPaddingBottom="0dp"
		app:tabPaddingEnd="@dimen/thick"
		app:tabPaddingStart="@dimen/thick"
		app:tabPaddingTop="0dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/large"
		android:layout_marginEnd="@dimen/standard"
		android:layout_marginStart="@dimen/standard"
		android:layout_marginTop="@dimen/huge"
		android:orientation="horizontal">

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btn_sign_in"
			fontPath="fonts/lato-bold.ttf"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/draw_rectangle_green"
			android:text="@string/sign_in"
			android:textColor="@color/white"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btn_sign_up"
			fontPath="fonts/lato-bold.ttf"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/medium"
			android:layout_weight="1"
			android:background="@drawable/draw_rectangle_green"
			android:text="@string/sign_up"
			android:textColor="@color/white"/>
	</LinearLayout>

</LinearLayout>